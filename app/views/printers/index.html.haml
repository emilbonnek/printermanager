.row{style: "margin-top: 10px;"}
  .medium-6.large-4.xlarge-3.xxlarge-2.column
    = form_tag printers_path, method: 'get' do
      = label_tag :date, "Dato"
      .row.collapse
        .small-6.columns
          %span.prefix= get_weekday_in_danish @date
        .small-6.columns
          = date_field_tag :date, @date
  .medium-6.large-4.xlarge-3.xxlarge-2.column
    = link_to "Ny reservation", new_printer_reservation_path(@printers.sample), {class:"button", data: {reveal_id: "new_reservation", reveal_ajax: true}}
  .medium-6.large-2.column.hide-for-small-only
    = form_tag settings_path, method: 'post' do
      = label_tag :current_time, "Vis klokken"
      = check_box_tag :current_time, checked = cookies[:current_time], {id: "hest"}
      = submit_tag "Prøv"
%hr
%table#bookings_table.hide-for-small-only
  %thead
    %tr
      - @printers.each do |printer|
        %th.text-center.printer-header{data: {id: printer.id, name: printer.name}}
          = printer.name
  %tbody
    %tr{data: {date:@date}}
      - @printers.each do |printer|
        %td
          = render printer.reservations.relevant(@date)
          = link_to "Ny reservation", new_printer_reservation_path(printer), data: {reveal_id: "new_reservation", reveal_ajax: true}

%dl.accordion.show-for-small-only{"data-accordion" => ""}
  - @printers.each do |printer|
    %dd.accordion-navigation
      = link_to printer.name, "#printer#{printer.id}"
      .content.printer{id: "printer#{printer.id}"}
        = render printer.reservations.relevant(@date)
        = link_to "Ny reservation", new_printer_reservation_path(printer), data: {reveal_id: "new_reservation", reveal_ajax: true}

