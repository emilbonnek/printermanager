= form_for @printer do |f|
  - if @printer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@printer.errors.count, "error")} prohibited this printer from being saved:"
      %ul
        - @printer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save', {class:"button expand"}
